@model Cerco.Animals.Web.Models.Company.IndexCompanyVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of companies</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <td>Name</td>
            <td>Address</td>
            <td>City</td>
            <td>Country</td>
            <td style="width:40px"></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var company in Model.Companies)
        {
            <tr>
                <td>
                    @Html.ActionLink(company.Name, "Show", "Company", new { company.Id }, null)
                </td>
                <td>@( company.Street + " " + company.Number )</td>
                <td>@( company.PostalCode + " " + company.City )</td>
                <td>@( company.Country )</td>
                <td style="width:40px">
                    <form action="@Url.Action("Delete","Company", new { company })" method="post">
                        <button type="submit" class="btn btn-default">
                            <i class="glyphicon glyphicon-trash"></i>
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>